<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--
    1、always：使菜单项一直显示在ToolBar上。
    2、ifRoom：如果有足够的空间，这个值会使菜单项显示在ToolBar上。
    3、never：使菜单项永远都不出现在ToolBar上,在…的子项中显示。
    4、withText：使菜单项和它的图标，菜单文本一起显示。
    5、collapseActionView：
    -->
    <item
        android:id="@+id/action_0"
        android:title="消息"
        app:actionProviderClass="com.like.common.view.toolbar.custom.CustomActionProvider"
        app:showAsAction="always" />

    <item
        android:id="@+id/action_1"
        android:title="添加"
        app:actionProviderClass="com.like.common.view.toolbar.custom.CustomActionProvider"
        app:showAsAction="always" />

    <item
        android:id="@+id/action_2"
        android:title="编辑"
        app:actionProviderClass="com.like.common.view.toolbar.custom.CustomActionProvider"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_3"
        android:title="删除"
        app:actionProviderClass="com.like.common.view.toolbar.custom.CustomActionProvider"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_4"
        android:title="查看"
        app:actionProviderClass="com.like.common.view.toolbar.custom.CustomActionProvider"
        app:showAsAction="never" />

</menu>