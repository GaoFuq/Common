<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge>

        <RelativeLayout
            android:id="@+id/title_bar_container"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            tools:background="@color/picture_color_grey"
            tools:layout_height="56dp">

            <ImageView
                android:id="@+id/title_bar_left"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/picture_color_grey"
                android:src="@drawable/picture_icon_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_bar_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/common_text_red_0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="aaaaaaaaaabbbbbbbbbb"
                android:textColor="@color/common_text_white_0"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/title_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_menu0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_text_red_0"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/common_text_white_0"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/title_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_text_red_0" />
    </merge>

</layout>
