<resources>
    <!-- Activity透明背景 -->
    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/common_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/common_text_white_0</item> <!--  颜色-->
        <item name="android:textSize">14sp</item> <!--  字体大小-->
    </style>

    <!-- DialogFragment 动画 -->
    <style name="dialogFragment_anim_bottom_in_bottom_out" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_fragment_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fragment_out</item>
    </style>
</resources>
